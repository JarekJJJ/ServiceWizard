<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <p class="m-0 p-0">
            <img src="/media/logo/koloWhite.png" class="" style="height:32px; width:auto; " />
            <a class="navbar-brand" href="">ServiceWizard</a>
        </p>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="bi bi-align-middle" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="MainPanel/Summary" @onclick="()=>activeSubMenu= !activeSubMenu" Match="NavLinkMatch.All">
                <span class="bi bi-tools ps-1 pe-3 fs-4" aria-hidden="true"></span> Naprawy <i class="ms-auto bi bi-plus-lg p-2"/>
            </NavLink>
            @if (activeSubMenu)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="MainPanel/Summary">
                            <span class="bi bi-card-list pe-3 fs-4" aria-hidden="true"></span> Lista napraw
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="MainPanel/TaskAdd">
                            <span class="bi bi-file-plus pe-3 fs-4" aria-hidden="true"></span> Dodaj naprawę
                        </NavLink>
                    </li>
                </ul>
                
            }
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="bi bi-align-middle" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool activeSubMenu;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
